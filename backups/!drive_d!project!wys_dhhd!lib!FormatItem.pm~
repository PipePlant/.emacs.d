use strict;
use warnings;
use Data::Dumper;
use feature qw(say);

package FormatItem;

sub DHTag {
    my $string = shift;

    $string =~ s/(>)(\S)/$1\n$2/g;
    $string =~ s/(\S)(<)/$1\n$2/g;
    $string =~ s/^\s+|\s+$|\s+\n|\n\s+//g;

    return $string;
};

sub DHComma {
    my $string = shift;

    $string =~ s/ï¼Œ/,/g;
    $string  =~ s/(\w),(\w)/$1, $2/g;

    return $string;
};

1;
