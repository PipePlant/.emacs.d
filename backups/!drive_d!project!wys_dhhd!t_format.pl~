use strict;
use warnings;
use Data::Dumper;
use feature qw(say);

sub DHTag {
    my $string = shift;

    $string =~ s/\s+(<)/$1/g;
    $string =~ s/(>)\s+/$1/g;
    $string =~ s/<self>/△/g;
    $string =~ s/<\/self>/▽/g;
    $string =~ s/<ex>/▲/g;
    $string =~ s/<\/ex>/▼/g;
    $string =~ s/<trans>/↑/g;
    $string =~ s/<\/trans>/↓/g;

    return $string;
};

sub DHde {
    my $string = shift;

    $string =~ s/，/,/g;
    $string  =~ s/(\w),(\w)/$1, $2/g;

    return $string;
};

sub DHzh {
    
};

1;
