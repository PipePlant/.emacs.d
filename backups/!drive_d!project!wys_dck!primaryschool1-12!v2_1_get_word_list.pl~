use strict;
use warnings;
use Data::Dumper;
use Encode;
use JSON;
use feature qw(say);

my @details_files = glob "./tmpdocument/1l*_details_full*";

foreach my $details_file (@details_files) {
    $details_file =~ /(1l\d+)/;
    my $word_list = "./v2_data/word_list/".$1."_word_list.txt";
    
    open my $DETAILS ,"<", $details_file or die $!;
    open my $WORD ,">", $word_list or die $!;
    while (<$DETAILS>) {
        $_ =~ /^(.+?)\t/;
        say $WORD $1;
    }
    close $DETAILS;
    close $WORD;
}
